<% provide(:title, @user.name) %>
<h1><%= @user.name %></h1>
<div class="row">
  <aside class="col-md-4">
    <section>
      <h1>
        <%= gravatar_for(@user, 100) %>
        <%= @user.name %>
      </h1>
    </section>
    <section>
      <%= render('shared/stats') %>
    </section>
  </aside>
  <div class="col-md-8">
    <div class="row">
      <div class="col-md-3">
        <%= render('follow_form') if signed_in? %>
      </div>
    </div>
    <% if @user.microposts.any? %>
      <h3>投稿一覧 (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts, renderer: BootstrapPagination::Rails %>
    <% end %>
  </div>
</div>
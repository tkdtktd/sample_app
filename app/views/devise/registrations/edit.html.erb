<% provide(:title, 'Edit') %>
<h2>編集 <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

  <%= render 'shared/error_messages', object: f.object %>

  <div class="field_with_errors">
    <%= devise_error_messages! %>
  </div>

  <div class="field">
    <%= f.label :name, autofocus: true, class: "control-label" %>
    <%= f.text_field :name, autofocus: true, class: "form-controll" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(パスワードを変更する場合のみ入力してください)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> 文字以上</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(必ず入力してください)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "更新" %>
  </div>
<% end %>

<h3>アカウントの削除</h3>

<p>unhappy? <%= button_to "アカウントを削除する", registration_path(resource_name), data: { confirm: "アカウントを削除するとログインできなくなります。本当に削除してよろしいですか？" }, method: :delete %></p>

<%= link_to "Back", :back %>
